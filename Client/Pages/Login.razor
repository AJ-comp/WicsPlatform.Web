@layout EmptyLayout
@page "/login"
<PageTitle>로그인 - WICS 방송 관리 시스템</PageTitle>

<div class="elegant-login-container">
    <div class="login-card">
        <!-- 로고 및 타이틀 섹션 -->
        <div class="login-header">
            <div class="logo-container">
                <div class="logo-circle">
                    <RadzenIcon Icon="broadcast_on_home" Style="font-size: 2rem; color: var(--elegant-gold);" />
                </div>
            </div>
            <h1 class="login-title">WICS 방송 관리 시스템</h1>
            <p class="login-subtitle">시스템 접속을 위해 로그인하세요</p>
            <div class="decorative-divider"></div>
        </div>

        <!-- 로그인 폼 -->
        <div class="login-body">
            <form @onsubmit="HandleLogin" @onsubmit:preventDefault="true">
                @if (errorVisible)
                {
                    <div class="elegant-alert error">
                        <RadzenIcon Icon="error_outline" class="alert-icon" />
                        <span class="alert-text">@error</span>
                    </div>
                }
                @if (infoVisible)
                {
                    <div class="elegant-alert info">
                        <RadzenIcon Icon="info_outline" class="alert-icon" />
                        <span class="alert-text">@info</span>
                    </div>
                }

                @if (isLoading)
                {
                    <div class="elegant-loading">
                        <div class="loading-spinner"></div>
                        <p class="loading-text">인증 처리 중...</p>
                    </div>
                }
                else
                {
                    <div class="form-group">
                        <label class="elegant-label">
                            <RadzenIcon Icon="person" class="label-icon" />
                            <span>사용자 계정</span>
                        </label>
                        <div class="input-wrapper">
                            <RadzenTextBox Name="userName"
                                           @bind-Value="@loginModel.UserName"
                                           Placeholder="이메일 주소를 입력하세요"
                                           class="elegant-input" />
                        </div>
                        <span class="field-hint">회사 이메일 계정을 사용하세요</span>
                    </div>

                    <div class="form-group">
                        <label class="elegant-label">
                            <RadzenIcon Icon="lock" class="label-icon" />
                            <span>비밀번호</span>
                        </label>
                        <div class="input-wrapper">
                            <RadzenPassword Name="password"
                                            @bind-Value="@loginModel.Password"
                                            Placeholder="비밀번호를 입력하세요"
                                            class="elegant-input" />
                        </div>
                        <span class="field-hint">대소문자를 구분합니다</span>
                    </div>

                    <input type="hidden" name="redirectUrl" value="@loginModel.redirectUrl" />

                    <div class="button-group">
                        <button type="submit" class="elegant-button primary">
                            <span class="button-text">로그인</span>
                            <RadzenIcon Icon="arrow_forward" class="button-icon" />
                        </button>
                    </div>
                }
            </form>
        </div>

        <!-- 푸터 -->
        <div class="login-footer">
            <p class="copyright">© 2024 WICS Broadcasting System. All rights reserved.</p>
        </div>
    </div>

    <!-- 배경 장식 요소 -->
    <div class="background-decoration">
        <div class="decoration-circle circle-1"></div>
        <div class="decoration-circle circle-2"></div>
        <div class="decoration-circle circle-3"></div>
    </div>
</div>

<style>
    /* 고풍스럽고 우아한 디자인 시스템 */
    :root {
        --elegant-primary: #1a2332;
        --elegant-secondary: #2c3e50;
        --elegant-gold: #b8860b;
        --elegant-silver: #c0c0c0;
        --elegant-bronze: #cd7f32;
        --elegant-cream: #f5f2e8;
        --elegant-border: #d4c5a0;
        --elegant-shadow: rgba(0, 0, 0, 0.1);
        --elegant-error: #c0392b;
        --elegant-info: #2980b9;
    }

    /* 메인 컨테이너 */
    .elegant-login-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #f5f2e8 0%, #e8e5d8 100%);
        position: relative;
        overflow: hidden;
        padding: 2rem;
    }

    /* 로그인 카드 */
    .login-card {
        width: 100%;
        max-width: 420px;
        background: var(--rz-base-background-color);
        border-radius: 12px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
        overflow: hidden;
        position: relative;
        z-index: 10;
    }

    /* 헤더 섹션 */
    .login-header {
        text-align: center;
        padding: 2.5rem 2rem 1.5rem;
        background: linear-gradient(to bottom, white, #fafaf8);
        border-bottom: 1px solid var(--elegant-border);
    }

    .logo-container {
        margin-bottom: 1rem;
    }

    .logo-circle {
        width: 80px;
        height: 80px;
        margin: 0 auto;
        border: 3px solid var(--elegant-gold);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--elegant-cream);
        box-shadow: 0 4px 15px rgba(184, 134, 11, 0.2);
    }

    .login-title {
        font-size: 1.5rem;
        font-weight: 300;
        color: var(--elegant-primary);
        margin: 0.75rem 0 0.5rem;
        font-family: 'Nanum Myeongjo', 'Georgia', serif;
        letter-spacing: 1px;
    }

    .login-subtitle {
        font-size: 0.8rem;
        color: var(--elegant-secondary);
        margin: 0;
        font-style: italic;
        opacity: 0.8;
    }

    .decorative-divider {
        width: 60px;
        height: 2px;
        background: linear-gradient(to right, transparent, var(--elegant-gold), transparent);
        margin: 1rem auto 0;
    }

    /* 바디 섹션 */
    .login-body {
        padding: 2rem;
    }

    /* 폼 그룹 */
    .form-group {
        margin-bottom: 1.5rem;
    }

    .elegant-label {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.85rem;
        font-weight: 600;
        color: var(--elegant-primary);
        margin-bottom: 0.5rem;
        letter-spacing: 0.5px;
    }

    .label-icon {
        font-size: 1rem !important;
        color: var(--elegant-gold);
    }

    .input-wrapper {
        position: relative;
    }

    .elegant-input {
        width: 100% !important;
    }

        .elegant-input input {
            width: 100% !important;
            padding: 0.75rem 1rem !important;
            font-size: 0.9rem !important;
            border: 1px solid var(--elegant-border) !important;
            border-radius: 6px !important;
            background: #fafaf8 !important;
            transition: all 0.3s ease !important;
        }

            .elegant-input input:focus {
                border-color: var(--elegant-gold) !important;
                background: var(--rz-base-background-color)!important;
                box-shadow: 0 0 0 3px rgba(184, 134, 11, 0.1) !important;
                outline: none !important;
            }

    .field-hint {
        display: block;
        font-size: 0.7rem;
        color: var(--elegant-secondary);
        margin-top: 0.35rem;
        font-style: italic;
        opacity: 0.7;
    }

    /* 버튼 스타일 */
    .button-group {
        margin-top: 2rem;
    }

    .elegant-button {
        width: 100%;
        padding: 0.875rem 1.5rem;
        border-radius: 6px;
        font-size: 0.9rem;
        font-weight: 600;
        letter-spacing: 0.5px;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        border: none;
        font-family: inherit;
    }

        .elegant-button.primary {
            background: linear-gradient(135deg, var(--elegant-gold), var(--elegant-bronze));
            color: white;
            box-shadow: 0 4px 15px rgba(184, 134, 11, 0.3);
        }

            .elegant-button.primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(184, 134, 11, 0.4);
            }

            .elegant-button.primary:active {
                transform: translateY(0);
            }

    .button-icon {
        font-size: 1.1rem !important;
    }

    /* 알림 메시지 */
    .elegant-alert {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem 1rem;
        border-radius: 6px;
        margin-bottom: 1rem;
        font-size: 0.8rem;
    }

        .elegant-alert.error {
            background: #fee;
            border: 1px solid #fcc;
            color: var(--elegant-error);
        }

        .elegant-alert.info {
            background: #e3f2fd;
            border: 1px solid #bbdefb;
            color: var(--elegant-info);
        }

    .alert-icon {
        font-size: 1.1rem !important;
    }

    /* 로딩 상태 */
    .elegant-loading {
        text-align: center;
        padding: 3rem 0;
    }

    .loading-spinner {
        width: 40px;
        height: 40px;
        border: 3px solid var(--elegant-border);
        border-top-color: var(--elegant-gold);
        border-radius: 50%;
        margin: 0 auto 1rem;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        to {
            transform: rotate(360deg);
        }
    }

    .loading-text {
        font-size: 0.85rem;
        color: var(--elegant-secondary);
        font-style: italic;
    }

    /* 푸터 */
    .login-footer {
        text-align: center;
        padding: 1.5rem;
        background: var(--elegant-cream);
        border-top: 1px solid var(--elegant-border);
    }

    .copyright {
        font-size: 0.7rem;
        color: var(--elegant-secondary);
        margin: 0;
    }

    /* 배경 장식 */
    .background-decoration {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        pointer-events: none;
        overflow: hidden;
    }

    .decoration-circle {
        position: absolute;
        border-radius: 50%;
        opacity: 0.05;
    }

    .circle-1 {
        width: 300px;
        height: 300px;
        background: var(--elegant-gold);
        top: -100px;
        right: -100px;
    }

    .circle-2 {
        width: 400px;
        height: 400px;
        background: var(--elegant-bronze);
        bottom: -150px;
        left: -150px;
    }

    .circle-3 {
        width: 200px;
        height: 200px;
        background: var(--elegant-silver);
        top: 50%;
        left: -100px;
    }

    /* 반응형 디자인 */
    @@media (max-width: 480px) {
        .login-card {
            margin: 1rem;
        }

        .login-header {
            padding: 2rem 1.5rem 1rem;
        }

        .login-body {
            padding: 1.5rem;
        }

        .login-title {
            font-size: 1.25rem;
        }
    }

    /* 다크 테마 지원 */
    :root[data-theme='dark'] .elegant-login-container {
        background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    }

    :root[data-theme='dark'] .login-card {
        background: #0d1117;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
    }

    :root[data-theme='dark'] .login-header {
        background: linear-gradient(to bottom, #0d1117, #161b22);
        border-bottom-color: #30363d;
    }

    :root[data-theme='dark'] .login-footer {
        background: #161b22;
        border-top-color: #30363d;
    }

    :root[data-theme='dark'] .elegant-input input {
        background: #161b22 !important;
        border-color: #30363d !important;
        color: #c9d1d9 !important;
    }

        :root[data-theme='dark'] .elegant-input input:focus {
            background: #0d1117 !important;
        }

    :root[data-theme='dark'] .login-title {
        color: #c9d1d9;
    }

    :root[data-theme='dark'] .login-subtitle,
    :root[data-theme='dark'] .field-hint,
    :root[data-theme='dark'] .copyright {
        color: #8b949e;
    }
</style>