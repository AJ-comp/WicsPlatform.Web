@page "/manage-broad-cast"
@attribute [Authorize]

<PageTitle>방송 관리</PageTitle>

<RadzenStack Gap="1rem">
    <!-- 탭 UI -->
    <RadzenTabs @bind-SelectedIndex="@selectedTabIndex" RenderMode="TabRenderMode.Client">
        <Tabs>
            <RadzenTabsItem Text="실시간 방송" Icon="broadcast_on_home">
                <BroadcastLiveTab />
            </RadzenTabsItem>
            <RadzenTabsItem Text="예약 방송" Icon="schedule">
                <BroadcastScheduleTab />
            </RadzenTabsItem>
        </Tabs>
    </RadzenTabs>
</RadzenStack>

<style>
    /* 탭 스타일 개선 */
    .rz-tabview-nav-content {
        padding: 0.5rem 0;
    }

    .rz-tabview-nav .rz-tabview-nav-link {
        font-weight: 500;
        padding: 0.75rem 1.5rem;
        transition: all 0.2s ease;
    }

    .rz-tabview-nav .rz-tabview-nav-link:hover {
        background-color: var(--rz-base-200);
    }

    .rz-tabview-nav .rz-tabview-nav-link.rz-state-active {
        font-weight: 600;
        border-bottom: 2px solid var(--rz-primary);
    }

    .rz-tabview-panels {
        padding-top: 1rem;
    }
</style>
