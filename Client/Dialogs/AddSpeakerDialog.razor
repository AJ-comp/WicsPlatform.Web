@attribute [Authorize]

<div class="speaker-dialog">
    <!-- 헤더 섹션 -->
    <div class="dialog-header-section">
        <div class="header-icon-wrapper">
            <div class="icon-background">
                <RadzenIcon Icon="speaker" class="header-icon" />
            </div>
        </div>
        <div class="header-content">
            <h2 class="header-title">새 스피커 등록</h2>
            <p class="header-subtitle">네트워크 스피커 장치를 시스템에 등록합니다</p>
        </div>
    </div>

    <!-- 폼 섹션 -->
    <RadzenTemplateForm TItem="SpeakerFormModel" Data="@model" Submit="@FormSubmit">
        <!-- 에러 알림 -->
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small"
                     AlertStyle="AlertStyle.Danger" Visible="@errorVisible" class="custom-alert">
            <div class="alert-content">
                <RadzenIcon Icon="error_outline" class="alert-icon" />
                <span class="alert-text">@error</span>
            </div>
        </RadzenAlert>

        <!-- 메인 폼 컨테이너 -->
        <div class="form-container">
            <!-- 기본 정보 섹션 -->
            <div class="section-group">
                <div class="section-header">
                    <div class="section-title-wrapper">
                        <RadzenIcon Icon="info" class="section-icon" />
                        <h3 class="section-title">기본 정보</h3>
                    </div>
                    <div class="section-line"></div>
                </div>

                <!-- 스피커명 필드 -->
                <div class="form-field">
                    <label class="field-label">
                        <span class="label-text">스피커명</span>
                        <span class="required-mark">*</span>
                    </label>
                    <div class="input-wrapper">
                        <div class="input-icon-container">
                            <RadzenIcon Icon="speaker_phone" class="input-icon" />
                        </div>
                        <RadzenTextBox class="custom-input"
                                       Placeholder="예: 1층 로비 스피커 #1"
                                       @bind-Value="@(model.Name)"
                                       Name="Name" />
                        <RadzenRequiredValidator Component="Name"
                                                 Text="스피커명은 필수 입력 항목입니다"
                                                 class="custom-validator" />
                    </div>
                    <span class="field-hint">스피커를 쉽게 식별할 수 있는 이름을 입력하세요</span>
                </div>

                <!-- IP 주소 필드 -->
                <div class="form-field">
                    <label class="field-label">
                        <span class="label-text">IP 주소</span>
                        <span class="required-mark">*</span>
                    </label>
                    <div class="input-wrapper">
                        <div class="input-icon-container">
                            <RadzenIcon Icon="router" class="input-icon" />
                        </div>
                        <RadzenTextBox class="custom-input"
                                       Placeholder="192.168.0.100"
                                       @bind-Value="@(model.Ip)"
                                       Name="Ip" />
                        <RadzenRequiredValidator Component="Ip"
                                                 Text="IP 주소는 필수 입력 항목입니다"
                                                 class="custom-validator" />
                        <RadzenRegexValidator Component="Ip"
                                              Text="올바른 IP 주소 형식이 아닙니다"
                                              Pattern="^((25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\.){3}(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$"
                                              class="custom-validator" />
                    </div>
                    <span class="field-hint">스피커 장치의 네트워크 IP 주소를 입력하세요</span>
                </div>
            </div>

            <!-- 장치 정보 섹션 -->
            <div class="section-group">
                <div class="section-header">
                    <div class="section-title-wrapper">
                        <RadzenIcon Icon="devices" class="section-icon" />
                        <h3 class="section-title">장치 정보</h3>
                    </div>
                    <div class="section-line"></div>
                </div>

                <!-- 모델명 필드 -->
                <div class="form-field">
                    <label class="field-label">
                        <span class="label-text">모델명</span>
                        <span class="required-mark">*</span>
                    </label>
                    <div class="input-wrapper">
                        <div class="input-icon-container">
                            <RadzenIcon Icon="devices_other" class="input-icon" />
                        </div>
                        <RadzenTextBox class="custom-input"
                                       Placeholder="예: WICS-SP1000"
                                       @bind-Value="@(model.Model)"
                                       Name="Model" />
                        <RadzenRequiredValidator Component="Model"
                                                 Text="모델명은 필수 입력 항목입니다"
                                                 class="custom-validator" />
                    </div>
                    <span class="field-hint">스피커 장치의 모델명을 정확히 입력하세요</span>
                </div>

                <!-- 비밀번호 필드 -->
                <div class="form-field">
                    <label class="field-label">
                        <span class="label-text">접속 비밀번호</span>
                        <span class="required-mark">*</span>
                    </label>
                    <div class="input-wrapper">
                        <div class="input-icon-container">
                            <RadzenIcon Icon="vpn_key" class="input-icon" />
                        </div>
                        <RadzenPassword class="custom-input"
                                        Placeholder="장치 접속 비밀번호"
                                        @bind-Value="@(model.Password)"
                                        Name="Password" />
                        <RadzenRequiredValidator Component="Password"
                                                 Text="비밀번호는 필수 입력 항목입니다"
                                                 class="custom-validator" />
                    </div>
                    <span class="field-hint">스피커 장치에 접속하기 위한 비밀번호입니다</span>
                </div>
            </div>

            <!-- 위치 정보 섹션 -->
            <div class="section-group">
                <div class="section-header">
                    <div class="section-title-wrapper">
                        <RadzenIcon Icon="place" class="section-icon" />
                        <h3 class="section-title">위치 정보</h3>
                    </div>
                    <div class="section-line"></div>
                </div>

                <!-- 설치 위치 필드 -->
                <div class="form-field">
                    <label class="field-label">
                        <span class="label-text">설치 위치</span>
                        <span class="required-mark">*</span>
                    </label>
                    <div class="input-wrapper">
                        <div class="input-icon-container">
                            <RadzenIcon Icon="location_on" class="input-icon" />
                        </div>
                        <RadzenTextBox class="custom-input"
                                       Placeholder="예: 본관 1층 로비 입구"
                                       @bind-Value="@(model.Location)"
                                       Name="Location" />
                        <RadzenRequiredValidator Component="Location"
                                                 Text="설치 위치는 필수 입력 항목입니다"
                                                 class="custom-validator" />
                    </div>
                    <span class="field-hint">스피커가 설치된 정확한 위치를 입력하세요</span>
                </div>

                <!-- 채널 선택 필드 -->
                <div class="form-field">
                    <label class="field-label">
                        <span class="label-text">채널 할당</span>
                        <span class="optional-mark">선택</span>
                    </label>
                    <div class="input-wrapper">
                        <div class="input-icon-container">
                            <RadzenIcon Icon="settings_input_antenna" class="input-icon" />
                        </div>
                        <RadzenDropDown class="custom-dropdown"
                                        AllowClear="true"
                                        AllowFiltering="true"
                                        FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                                        @bind-Value="@(model.ChannelId)"
                                        Data="@channels"
                                        TextProperty="Name"
                                        ValueProperty="Id"
                                        Placeholder="채널을 선택하세요 (나중에 설정 가능)"
                                        Name="ChannelId" />
                    </div>
                    <span class="field-hint">스피커를 특정 채널에 할당할 수 있습니다</span>
                </div>
            </div>

            <!-- 정보 카드 -->
            <div class="info-section">
                <div class="info-card">
                    <RadzenIcon Icon="lightbulb" class="info-icon" />
                    <div class="info-content">
                        <h4 class="info-title">스피커 등록 안내</h4>
                        <ul class="info-list">
                            <li>등록 전 스피커가 네트워크에 연결되어 있는지 확인하세요</li>
                            <li>IP 주소는 중복될 수 없으며, 고정 IP 사용을 권장합니다</li>
                            <li>채널 할당은 나중에 변경할 수 있습니다</li>
                            <li>등록 후 연결 테스트를 진행하는 것을 권장합니다</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- 액션 버튼 섹션 -->
        <div class="dialog-actions">
            <div class="action-info">
                <RadzenIcon Icon="info_outline" class="action-info-icon" />
                <span class="action-info-text">모든 필수 항목을 입력했는지 확인하세요</span>
            </div>
            <div class="action-buttons">
                <RadzenButton ButtonStyle="ButtonStyle.Light"
                              Text="취소"
                              Icon="close"
                              Click="@CancelClick"
                              Variant="Variant.Flat"
                              class="btn-cancel"
                              Disabled="@isProcessing" />
                @if (isProcessing)
                {
                    <RadzenButton ButtonType="ButtonType.Submit"
                                  Text="등록 중..."
                                  Icon="sync"
                                  IconSpin="true"
                                  Disabled="true"
                                  Variant="Variant.Flat"
                                  class="btn-primary processing" />
                }
                else
                {
                    <RadzenButton ButtonType="ButtonType.Submit"
                                  Icon="add_circle"
                                  Text="스피커 등록"
                                  Variant="Variant.Flat"
                                  class="btn-primary" />
                }
            </div>
        </div>
    </RadzenTemplateForm>
</div>

<style>
    /* 메인 컨테이너 */
    .speaker-dialog {
        padding: 0;
        font-family: 'Segoe UI', -apple-system, BlinkMacSystemFont, sans-serif;
    }

    /* 헤더 섹션 */
    .dialog-header-section {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1.5rem;
        background: linear-gradient(135deg, #3b82f6 0%, #1e40af 100%);
        border-radius: 12px 12px 0 0;
        margin: -24px -24px 0 -24px;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    }

    .header-icon-wrapper {
        flex-shrink: 0;
    }

    .icon-background {
        width: 3rem;
        height: 3rem;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 12px;
        backdrop-filter: blur(10px);
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .header-icon {
        font-size: 1.5rem !important;
        color: white !important;
    }

    .header-content {
        flex: 1;
    }

    .header-title {
        margin: 0;
        font-size: 1.1rem;
        font-weight: 600;
        color: white;
        letter-spacing: -0.02em;
    }

    .header-subtitle {
        margin: 0.25rem 0 0 0;
        font-size: 0.75rem;
        color: rgba(255, 255, 255, 0.9);
        font-weight: 400;
    }

    /* 커스텀 알림 */
    .custom-alert {
        margin: 1.5rem 0 1rem 0;
        border-radius: 8px;
        border: 1px solid rgba(239, 68, 68, 0.2);
        background: rgba(254, 226, 226, 0.5);
        backdrop-filter: blur(5px);
    }

    .alert-content {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .alert-icon {
        font-size: 1rem !important;
        color: #dc2626;
    }

    .alert-text {
        font-size: 0.75rem;
        color: #991b1b;
        font-weight: 500;
    }

    /* 폼 컨테이너 */
    .form-container {
        padding: 1.5rem 0;
    }

    /* 섹션 그룹 */
    .section-group {
        margin-bottom: 2rem;
        padding: 1.25rem;
        background: linear-gradient(to bottom, #fafbfc, #ffffff);
        border-radius: 10px;
        border: 1px solid #e5e7eb;
    }

    .section-header {
        margin-bottom: 1.25rem;
    }

    .section-title-wrapper {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 0.5rem;
    }

    .section-icon {
        font-size: 0.9rem !important;
        color: #3b82f6;
    }

    .section-title {
        margin: 0;
        font-size: 0.85rem;
        font-weight: 600;
        color: #1e293b;
        letter-spacing: -0.01em;
    }

    .section-line {
        height: 2px;
        background: linear-gradient(90deg, #3b82f6 0%, transparent 100%);
        border-radius: 1px;
    }

    /* 폼 필드 */
    .form-field {
        margin-bottom: 1.25rem;
    }

        .form-field:last-child {
            margin-bottom: 0;
        }

    .field-label {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 0.5rem;
    }

    .label-text {
        font-size: 0.75rem;
        font-weight: 600;
        color: #374151;
        letter-spacing: 0.025em;
    }

    .required-mark {
        color: #ef4444;
        font-size: 0.75rem;
        font-weight: 500;
    }

    .optional-mark {
        color: #9ca3af;
        font-size: 0.65rem;
        font-weight: 400;
        background: #f3f4f6;
        padding: 0.125rem 0.375rem;
        border-radius: 4px;
    }

    /* 입력 필드 래퍼 */
    .input-wrapper {
        position: relative;
    }

    .input-icon-container {
        position: absolute;
        left: 0.875rem;
        top: 50%;
        transform: translateY(-50%);
        z-index: 2;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 1.25rem;
        height: 1.25rem;
    }

    .input-icon {
        font-size: 1rem !important;
        color: #9ca3af;
        transition: color 0.2s;
    }

    /* 커스텀 입력 필드 */
    .custom-input,
    .custom-dropdown {
        width: 100% !important;
        padding-left: 2.75rem !important;
        font-size: 0.8rem !important;
        border: 1px solid #e5e7eb !important;
        border-radius: 8px !important;
        background: var(--rz-base-background-color)!important;
        transition: all 0.2s !important;
        height: 2.5rem !important;
    }

        .custom-input:hover,
        .custom-dropdown:hover {
            border-color: #9ca3af !important;
        }

        .custom-input:focus,
        .custom-dropdown:focus {
            border-color: #3b82f6 !important;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1) !important;
            outline: none !important;
        }

            .custom-input:focus ~ .input-icon-container .input-icon,
            .custom-dropdown:focus ~ .input-icon-container .input-icon {
                color: #3b82f6;
            }

    /* 필드 힌트 */
    .field-hint {
        display: block;
        margin-top: 0.375rem;
        font-size: 0.7rem;
        color: #6b7280;
        padding-left: 2.75rem;
    }

    /* 커스텀 유효성 검사 */
    .custom-validator {
        font-size: 0.7rem !important;
        color: #ef4444 !important;
        margin-top: 0.25rem !important;
        padding-left: 2.75rem !important;
    }

    /* 정보 섹션 */
    .info-section {
        margin-top: 1.5rem;
    }

    .info-card {
        display: flex;
        gap: 0.875rem;
        padding: 1rem;
        background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
        border-radius: 10px;
        border: 1px solid #bfdbfe;
    }

    .info-icon {
        font-size: 1rem !important;
        color: #3b82f6;
        flex-shrink: 0;
        margin-top: 0.125rem;
    }

    .info-content {
        flex: 1;
    }

    .info-title {
        margin: 0 0 0.5rem 0;
        font-size: 0.75rem;
        font-weight: 600;
        color: #1e40af;
    }

    .info-list {
        margin: 0;
        padding-left: 1.25rem;
        list-style: none;
    }

        .info-list li {
            position: relative;
            font-size: 0.7rem;
            color: #3730a3;
            line-height: 1.5;
            margin-bottom: 0.375rem;
            padding-left: 1rem;
        }

            .info-list li:last-child {
                margin-bottom: 0;
            }

            .info-list li::before {
                content: "✓";
                position: absolute;
                left: 0;
                color: #3b82f6;
                font-weight: bold;
                font-size: 0.75rem;
            }

    /* 액션 버튼 섹션 */
    .dialog-actions {
        padding: 1.25rem 0 0 0;
        margin-top: 1.5rem;
        border-top: 1px solid #e5e7eb;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .action-info {
        display: flex;
        align-items: center;
        gap: 0.375rem;
    }

    .action-info-icon {
        font-size: 0.875rem !important;
        color: #3b82f6;
    }

    .action-info-text {
        font-size: 0.7rem;
        color: #6b7280;
    }

    .action-buttons {
        display: flex;
        gap: 0.75rem;
    }

    /* 버튼 스타일 */
    .btn-cancel,
    .btn-primary {
        font-size: 0.75rem !important;
        font-weight: 500 !important;
        padding: 0.5rem 1.25rem !important;
        border-radius: 8px !important;
        transition: all 0.2s !important;
        letter-spacing: 0.025em !important;
    }

    .btn-cancel {
        background: var(--rz-base-background-color)!important;
        color: #6b7280 !important;
        border: 1px solid #e5e7eb !important;
    }

        .btn-cancel:hover:not(:disabled) {
            background: #f9fafb !important;
            border-color: #d1d5db !important;
            color: #374151 !important;
        }

    .btn-primary {
        background: linear-gradient(135deg, #3b82f6 0%, #1e40af 100%) !important;
        color: white !important;
        border: none !important;
        box-shadow: 0 2px 4px rgba(59, 130, 246, 0.2) !important;
    }

        .btn-primary:hover:not(:disabled) {
            box-shadow: 0 4px 8px rgba(59, 130, 246, 0.3) !important;
            transform: translateY(-1px);
        }

        .btn-primary.processing {
            background: #9ca3af !important;
            cursor: not-allowed !important;
        }

    /* 스크롤바 스타일 */
    ::-webkit-scrollbar {
        width: 8px;
        height: 8px;
    }

    ::-webkit-scrollbar-track {
        background: #f3f4f6;
        border-radius: 4px;
    }

    ::-webkit-scrollbar-thumb {
        background: #d1d5db;
        border-radius: 4px;
    }

        ::-webkit-scrollbar-thumb:hover {
            background: #9ca3af;
        }

    /* 드롭다운 커스터마이징 - 글자 크기 축소 */
    .custom-dropdown .rz-dropdown-filter-container {
        padding: 0.375rem !important;
    }

    .custom-dropdown .rz-dropdown-filter {
        font-size: 0.7rem !important;
        padding: 0.375rem !important;
        height: 28px !important;
    }

    .custom-dropdown .rz-dropdown-items {
        max-height: 200px !important;
    }

    .custom-dropdown .rz-dropdown-item {
        font-size: 0.7rem !important;
        padding: 0.375rem 0.5rem !important;
        min-height: 28px !important;
        line-height: 1.4 !important;
    }

        .custom-dropdown .rz-dropdown-item:hover {
            background-color: #f3f4f6 !important;
        }

    .custom-dropdown .rz-placeholder {
        font-size: 0.75rem !important;
        color: #9ca3af !important;
    }

    .custom-dropdown .rz-dropdown-panel {
        border: 1px solid #e5e7eb !important;
        border-radius: 8px !important;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1) !important;
        margin-top: 4px !important;
    }

    .custom-dropdown .rz-dropdown-clear-icon {
        font-size: 0.875rem !important;
        width: 20px !important;
        height: 20px !important;
    }

    /* 다크 모드 지원 */
    @@media (prefers-color-scheme: dark) {
        .dialog-header-section

    {
        background: linear-gradient(135deg, #1e40af 0%, #1e3a8a 100%);
    }

    .section-group {
        background: linear-gradient(to bottom, #1f2937, #111827);
        border-color: #374151;
    }

    .custom-input,
    .custom-dropdown {
        background: #1f2937 !important;
        border-color: #374151 !important;
        color: #f3f4f6 !important;
    }

        .custom-input:hover,
        .custom-dropdown:hover {
            border-color: #4b5563 !important;
        }

        .custom-input:focus,
        .custom-dropdown:focus {
            border-color: #3b82f6 !important;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.2) !important;
        }

    .label-text,
    .section-title {
        color: #e5e7eb;
    }

    .field-hint {
        color: #9ca3af;
    }

    .info-card {
        background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 100%);
        border-color: #2563eb;
    }

    .info-title {
        color: #93bbfc;
    }

    .info-list li {
        color: #bfdbfe;
    }

    .btn-cancel {
        background: #1f2937 !important;
        border-color: #374151 !important;
        color: #e5e7eb !important;
    }

        .btn-cancel:hover:not(:disabled) {
            background: #374151 !important;
            border-color: #4b5563 !important;
        }

    .custom-dropdown .rz-dropdown-item:hover {
        background-color: #374151 !important;
    }

    .custom-dropdown .rz-dropdown-panel {
        background: #1f2937 !important;
        border-color: #374151 !important;
