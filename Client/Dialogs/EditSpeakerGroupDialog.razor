        padding-left: 2.75rem !important;
    }

    /* 정보 섹션 */
    .info-section {
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid #f3f4f6;
    }

    .info-card {
        display: flex;
        gap: 0.875rem;
        padding: 1rem;
        background: linear-gradient(135deg, #f3f4f6 0%, #f9fafb 100%);
        border-radius: 8px;
        border: 1px solid #e5e7eb;
    }

        .info-card.edit-info {
            background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
            border-color: #fbbf24;
        }

    .info-icon {
        font-size: 1rem !important;
        color: #f59e0b;
        flex-shrink: 0;
        margin-top: 0.125rem;
    }

    .info-content {
        flex: 1;
    }

    .info-title {
        margin: 0 0 0.5rem 0;
