@attribute [Authorize]

<div class="speaker-group-dialog">
    <!-- 헤더 섹션 -->
    <div class="dialog-header-section edit-mode">
        <div class="header-icon-wrapper">
            <div class="icon-background">
                <RadzenIcon Icon="edit" class="header-icon" />
            </div>
        </div>
        <div class="header-content">
            <h2 class="header-title">스피커 그룹 수정</h2>
            <p class="header-subtitle">기존 그룹의 정보를 수정하고 업데이트합니다</p>
        </div>
    </div>

    <!-- 폼 섹션 -->
    <RadzenTemplateForm TItem="SpeakerGroupFormModel" Data="@model" Submit="@FormSubmit">
        <!-- 에러 알림 -->
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small"
                     AlertStyle="AlertStyle.Danger" Visible="@errorVisible" class="custom-alert">
            <div class="alert-content">
                <RadzenIcon Icon="error_outline" class="alert-icon" />
                <span class="alert-text">@error</span>
            </div>
        </RadzenAlert>

        <!-- 메인 폼 컨테이너 -->
        <div class="form-container">
            <!-- 그룹명 필드 -->
            <div class="form-field">
                <label class="field-label">
                    <span class="label-text">그룹명</span>
                    <span class="required-mark">*</span>
                </label>
                <div class="input-wrapper">
                    <div class="input-icon-container">
                        <RadzenIcon Icon="folder_open" class="input-icon" />
                    </div>
                    <RadzenTextBox class="custom-input"
                                   Placeholder="예: 1층 로비 스피커 그룹"
                                   @bind-Value="@(model.GroupName)"
                                   Name="GroupName" />
                    <RadzenRequiredValidator Component="GroupName"
                                             Text="그룹명은 필수 입력 항목입니다"
                                             class="custom-validator" />
                </div>
                <span class="field-hint">그룹을 식별할 수 있는 명확한 이름을 입력하세요</span>
            </div>

            <!-- 설명 필드 -->
            <div class="form-field">
                <label class="field-label">
                    <span class="label-text">설명</span>
                    <span class="optional-mark">선택</span>
                </label>
                <div class="input-wrapper">
                    <div class="input-icon-container textarea-icon">
                        <RadzenIcon Icon="notes" class="input-icon" />
                    </div>
                    <RadzenTextArea Rows="4"
                                    class="custom-textarea"
                                    Placeholder="이 그룹의 용도나 특징을 간단히 설명해주세요"
                                    @bind-Value="@(model.Description)"
                                    Name="Description" />
                </div>
                <span class="field-hint">그룹의 목적이나 관리 정보를 입력할 수 있습니다</span>
            </div>

            <!-- 수정 정보 섹션 -->
            <div class="info-section">
                <div class="info-card edit-info">
                    <RadzenIcon Icon="history" class="info-icon" />
                    <div class="info-content">
                        <h4 class="info-title">수정 안내사항</h4>
                        <ul class="info-list">
                            <li>그룹명과 설명을 변경할 수 있습니다</li>
                            <li>변경사항은 즉시 적용되며 연결된 스피커에는 영향을 주지 않습니다</li>
                            <li>그룹 삭제는 별도의 관리 메뉴에서 가능합니다</li>
                        </ul>
                    </div>
                </div>

                <!-- 변경 사항 추적 -->
                <div class="change-tracker">
                    <div class="tracker-item">
                        <RadzenIcon Icon="update" class="tracker-icon" />
                        <span class="tracker-label">마지막 수정</span>
                        <span class="tracker-value">변경사항이 저장되면 업데이트됩니다</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- 액션 버튼 섹션 -->
        <div class="dialog-actions">
            <div class="action-info">
                <RadzenIcon Icon="info_outline" class="action-info-icon" />
                <span class="action-info-text">변경사항을 저장하시겠습니까?</span>
            </div>
            <div class="action-buttons">
                <RadzenButton ButtonStyle="ButtonStyle.Light"
                              Text="취소"
                              Icon="close"
                              Click="@CancelClick"
                              Variant="Variant.Flat"
                              class="btn-cancel"
                              Disabled="@isProcessing" />
                @if (isProcessing)
                {
                    <RadzenButton ButtonType="ButtonType.Submit"
                                  Text="저장 중..."
                                  Icon="sync"
                                  IconSpin="true"
                                  Disabled="true"
                                  Variant="Variant.Flat"
                                  class="btn-primary processing" />
                }
                else
                {
                    <RadzenButton ButtonType="ButtonType.Submit"
                                  Icon="save"
                                  Text="변경사항 저장"
                                  Variant="Variant.Flat"
                                  class="btn-primary btn-save" />
                }
            </div>
        </div>
    </RadzenTemplateForm>
</div>

