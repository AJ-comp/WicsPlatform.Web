@attribute [Authorize]

<div class="speaker-group-dialog">
    <!-- 헤더 섹션 -->
    <div class="dialog-header-section">
        <div class="header-icon-wrapper">
            <div class="icon-background">
                <RadzenIcon Icon="group_add" class="header-icon" />
            </div>
        </div>
        <div class="header-content">
            <h2 class="header-title">새 스피커 그룹 생성</h2>
            <p class="header-subtitle">스피커를 체계적으로 관리하기 위한 그룹을 생성합니다</p>
        </div>
    </div>

    <!-- 폼 섹션 -->
    <RadzenTemplateForm TItem="SpeakerGroupFormModel" Data="@model" Submit="@FormSubmit">
        <!-- 에러 알림 -->
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small"
                     AlertStyle="AlertStyle.Danger" Visible="@errorVisible" class="custom-alert">
            <div class="alert-content">
                <RadzenIcon Icon="error_outline" class="alert-icon" />
                <span class="alert-text">@error</span>
            </div>
        </RadzenAlert>

        <!-- 메인 폼 컨테이너 -->
        <div class="form-container">
            <!-- 그룹명 필드 -->
            <div class="form-field">
                <label class="field-label">
                    <span class="label-text">그룹명</span>
                    <span class="required-mark">*</span>
                </label>
                <div class="input-wrapper">
                    <div class="input-icon-container">
                        <RadzenIcon Icon="folder" class="input-icon" />
                    </div>
                    <RadzenTextBox class="custom-input"
                                   Placeholder="예: 1층 로비 스피커 그룹"
                                   @bind-Value="@(model.GroupName)"
                                   Name="GroupName" />
                    <RadzenRequiredValidator Component="GroupName"
                                             Text="그룹명은 필수 입력 항목입니다"
                                             class="custom-validator" />
                </div>
                <span class="field-hint">그룹을 식별할 수 있는 명확한 이름을 입력하세요</span>
            </div>

            <!-- 설명 필드 -->
            <div class="form-field">
                <label class="field-label">
                    <span class="label-text">설명</span>
                    <span class="optional-mark">선택</span>
                </label>
                <div class="input-wrapper">
                    <div class="input-icon-container textarea-icon">
                        <RadzenIcon Icon="notes" class="input-icon" />
                    </div>
                    <RadzenTextArea Rows="4"
                                    class="custom-textarea"
                                    Placeholder="이 그룹의 용도나 특징을 간단히 설명해주세요"
                                    @bind-Value="@(model.Description)"
                                    Name="Description" />
                </div>
                <span class="field-hint">그룹의 목적이나 관리 정보를 입력할 수 있습니다</span>
            </div>

            <!-- 추가 정보 섹션 -->
            <div class="info-section">
                <div class="info-card">
                    <RadzenIcon Icon="info" class="info-icon" />
                    <div class="info-content">
                        <h4 class="info-title">그룹 생성 안내</h4>
                        <ul class="info-list">
                            <li>생성된 그룹에 스피커를 추가하여 일괄 제어가 가능합니다</li>
                            <li>그룹별로 볼륨, 방송 설정을 개별 관리할 수 있습니다</li>
                            <li>그룹 정보는 생성 후에도 수정 가능합니다</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- 액션 버튼 섹션 -->
        <div class="dialog-actions">
            <div class="action-buttons">
                <RadzenButton ButtonStyle="ButtonStyle.Light"
                              Text="취소"
                              Icon="close"
                              Click="@CancelClick"
                              Variant="Variant.Flat"
                              class="btn-cancel"
                              Disabled="@isProcessing" />
                @if (isProcessing)
                {
                    <RadzenButton ButtonType="ButtonType.Submit"
                                  Text="생성 중..."
                                  Icon="sync"
                                  IconSpin="true"
                                  Disabled="true"
                                  Variant="Variant.Flat"
                                  class="btn-primary processing" />
                }
                else
                {
                    <RadzenButton ButtonType="ButtonType.Submit"
                                  Icon="check_circle"
                                  Text="그룹 생성"
                                  Variant="Variant.Flat"
                                  class="btn-primary" />
                }
            </div>
        </div>
    </RadzenTemplateForm>
</div>

<style>
    /* 메인 컨테이너 */
    .speaker-group-dialog {
        padding: 0;
        font-family: 'Segoe UI', -apple-system, BlinkMacSystemFont, sans-serif;
    }

    /* 헤더 섹션 */
    .dialog-header-section {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 1.5rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 12px 12px 0 0;
        margin: -24px -24px 0 -24px;
    }

    .header-icon-wrapper {
        flex-shrink: 0;
    }

    .icon-background {
        width: 3rem;
        height: 3rem;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 12px;
        backdrop-filter: blur(10px);
    }

    .header-icon {
        font-size: 1.5rem !important;
        color: white !important;
    }

    .header-content {
        flex: 1;
    }

    .header-title {
        margin: 0;
        font-size: 1.1rem;
        font-weight: 600;
        color: white;
        letter-spacing: -0.02em;
    }

    .header-subtitle {
        margin: 0.25rem 0 0 0;
        font-size: 0.75rem;
        color: rgba(255, 255, 255, 0.9);
        font-weight: 400;
    }

    /* 커스텀 알림 */
    .custom-alert {
        margin: 1.5rem 0 1rem 0;
        border-radius: 8px;
        border: 1px solid rgba(239, 68, 68, 0.2);
        background: rgba(254, 226, 226, 0.5);
    }

    .alert-content {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .alert-icon {
        font-size: 1rem !important;
        color: #dc2626;
    }

    .alert-text {
        font-size: 0.75rem;
        color: #991b1b;
    }

    /* 폼 컨테이너 */
    .form-container {
        padding: 1.5rem 0;
    }

    /* 폼 필드 */
    .form-field {
        margin-bottom: 1.5rem;
    }

    .field-label {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 0.5rem;
    }

    .label-text {
        font-size: 0.75rem;
        font-weight: 600;
        color: #374151;
        letter-spacing: 0.025em;
    }

    .required-mark {
        color: #ef4444;
        font-size: 0.75rem;
        font-weight: 500;
    }

    .optional-mark {
        color: #9ca3af;
        font-size: 0.65rem;
        font-weight: 400;
        background: #f3f4f6;
        padding: 0.125rem 0.375rem;
        border-radius: 4px;
    }

    /* 입력 필드 래퍼 */
    .input-wrapper {
        position: relative;
    }

    .input-icon-container {
        position: absolute;
        left: 0.875rem;
        top: 50%;
        transform: translateY(-50%);
        z-index: 2;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 1.25rem;
        height: 1.25rem;
    }

        .input-icon-container.textarea-icon {
            top: 1rem;
            transform: none;
        }

    .input-icon {
        font-size: 1rem !important;
        color: #9ca3af;
        transition: color 0.2s;
    }

    /* 커스텀 입력 필드 */
    .custom-input,
    .custom-textarea {
        width: 100% !important;
        padding-left: 2.75rem !important;
        font-size: 0.8rem !important;
        border: 1px solid #e5e7eb !important;
        border-radius: 8px !important;
        background: var(--rz-base-background-color)!important;
        transition: all 0.2s !important;
    }

    .custom-input {
        height: 2.5rem !important;
    }

    .custom-textarea {
        min-height: 5rem !important;
        padding-top: 0.75rem !important;
        resize: vertical !important;
    }

        .custom-input:hover,
        .custom-textarea:hover {
            border-color: #9ca3af !important;
        }

        .custom-input:focus,
        .custom-textarea:focus {
            border-color: #667eea !important;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1) !important;
            outline: none !important;
        }

            .custom-input:focus ~ .input-icon-container .input-icon,
            .custom-textarea:focus ~ .input-icon-container .input-icon {
                color: #667eea;
            }

    /* 필드 힌트 */
    .field-hint {
        display: block;
        margin-top: 0.375rem;
        font-size: 0.7rem;
        color: #6b7280;
        padding-left: 2.75rem;
    }

    /* 커스텀 유효성 검사 */
    .custom-validator {
        font-size: 0.7rem !important;
        color: #ef4444 !important;
        margin-top: 0.25rem !important;
        padding-left: 2.75rem !important;
    }

    /* 정보 섹션 */
    .info-section {
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid #f3f4f6;
    }

    .info-card {
        display: flex;
        gap: 0.875rem;
        padding: 1rem;
        background: linear-gradient(135deg, #f3f4f6 0%, #f9fafb 100%);
        border-radius: 8px;
        border: 1px solid #e5e7eb;
    }

    .info-icon {
        font-size: 1rem !important;
        color: #667eea;
        flex-shrink: 0;
        margin-top: 0.125rem;
    }

    .info-content {
        flex: 1;
    }

    .info-title {
        margin: 0 0 0.5rem 0;
        font-size: 0.75rem;
        font-weight: 600;
        color: #374151;
    }

    .info-list {
        margin: 0;
        padding-left: 1.25rem;
        list-style: none;
    }

        .info-list li {
            position: relative;
            font-size: 0.7rem;
            color: #6b7280;
            line-height: 1.4;
            margin-bottom: 0.375rem;
            padding-left: 1rem;
        }

            .info-list li:last-child {
                margin-bottom: 0;
            }

            .info-list li::before {
                content: "•";
                position: absolute;
                left: 0;
                color: #667eea;
                font-weight: bold;
            }

    /* 액션 버튼 섹션 */
    .dialog-actions {
        padding: 1.25rem 0 0 0;
        margin-top: 1.5rem;
        border-top: 1px solid #e5e7eb;
    }

    .action-buttons {
        display: flex;
        justify-content: flex-end;
        gap: 0.75rem;
    }

    /* 버튼 스타일 */
    .btn-cancel,
    .btn-primary {
        font-size: 0.75rem !important;
        font-weight: 500 !important;
        padding: 0.5rem 1.25rem !important;
        border-radius: 8px !important;
        transition: all 0.2s !important;
        letter-spacing: 0.025em !important;
    }

    .btn-cancel {
        background: var(--rz-base-background-color)!important;
        color: #6b7280 !important;
        border: 1px solid #e5e7eb !important;
    }

        .btn-cancel:hover:not(:disabled) {
            background: #f9fafb !important;
            border-color: #d1d5db !important;
            color: #374151 !important;
        }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
        color: white !important;
        border: none !important;
        box-shadow: 0 2px 4px rgba(102, 126, 234, 0.2) !important;
    }

        .btn-primary:hover:not(:disabled) {
            box-shadow: 0 4px 8px rgba(102, 126, 234, 0.3) !important;
            transform: translateY(-1px);
        }

        .btn-primary.processing {
            background: #9ca3af !important;
            cursor: not-allowed !important;
        }

    /* 스크롤바 스타일 */
    .custom-textarea::-webkit-scrollbar {
        width: 6px;
    }

    .custom-textarea::-webkit-scrollbar-track {
        background: #f3f4f6;
        border-radius: 3px;
    }

    .custom-textarea::-webkit-scrollbar-thumb {
        background: #d1d5db;
        border-radius: 3px;
    }

        .custom-textarea::-webkit-scrollbar-thumb:hover {
            background: #9ca3af;
        }

    /* 다크 모드 지원 */
    @@media (prefers-color-scheme: dark) {
        .dialog-header-section

    {
        background: linear-gradient(135deg, #4c1d95 0%, #5b21b6 100%);
    }

    .custom-input,
    .custom-textarea {
        background: #1f2937 !important;
        border-color: #374151 !important;
        color: #f3f4f6 !important;
    }

        .custom-input:hover,
        .custom-textarea:hover {
            border-color: #4b5563 !important;
        }

    .label-text,
    .info-title {
        color: #e5e7eb;
    }

    .field-hint,
    .info-list li {
        color: #9ca3af;
    }

    .info-card {
        background: linear-gradient(135deg, #1f2937 0%, #111827 100%);
        border-color: #374151;
    }

    .btn-cancel {
        background: #1f2937 !important;
        border-color: #374151 !important;
        color: #e5e7eb !important;
    }

        .btn-cancel:hover:not(:disabled) {
            background: #374151 !important;
            border-color: #4b5563 !important;
        }

    }

    /* 애니메이션 */
    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(-10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .speaker-group-dialog {
        animation: fadeIn 0.3s ease-out;
    }
</style>