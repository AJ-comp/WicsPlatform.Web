@attribute [Authorize]

<div class="tts-dialog">
    <!-- 헤더 섹션 -->
    <div class="dialog-header-section edit-mode">
        <div class="header-icon-wrapper">
            <div class="icon-background">
                <RadzenIcon Icon="edit" class="header-icon" />
            </div>
        </div>
        <div class="header-content">
            <h2 class="header-title">TTS 메시지 수정</h2>
            <p class="header-subtitle">기존 TTS 메시지의 내용을 수정하고 업데이트합니다</p>
        </div>
    </div>

    <!-- 폼 섹션 -->
    <RadzenTemplateForm TItem="TtsEditFormModel" Data="@model" Submit="@FormSubmit">
        <!-- 에러 알림 -->
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small"
                     AlertStyle="AlertStyle.Danger" Visible="@errorVisible" class="custom-alert">
            <div class="alert-content">
                <RadzenIcon Icon="error_outline" class="alert-icon" />
                <span class="alert-text">@error</span>
            </div>
        </RadzenAlert>

        <!-- 메인 폼 컨테이너 -->
        <div class="form-container">
            <!-- 기본 정보 섹션 -->
            <div class="section-group">
                <div class="section-header">
                    <div class="section-title-wrapper">
                        <RadzenIcon Icon="info" class="section-icon" />
                        <h3 class="section-title">TTS 정보</h3>
                    </div>
                    <div class="section-line"></div>
                </div>

                <!-- 제목 필드 -->
                <div class="form-field">
                    <label class="field-label">
                        <span class="label-text">제목</span>
                        <span class="required-mark">*</span>
                    </label>
                    <div class="input-wrapper">
                        <div class="input-icon-container">
                            <RadzenIcon Icon="title" class="input-icon" />
                        </div>
                        <RadzenTextBox class="custom-input"
                                       Placeholder="예: 오전 안내 방송"
                                       @bind-Value="@(model.Name)"
                                       Name="Name" />
                        <RadzenRequiredValidator Component="Name"
                                                 Text="제목은 필수 입력 항목입니다"
                                                 class="custom-validator" />
                    </div>
                    <span class="field-hint">TTS 메시지를 쉽게 식별할 수 있는 제목을 입력하세요</span>
                </div>

                <!-- 내용 필드 -->
                <div class="form-field">
                    <label class="field-label">
                        <span class="label-text">음성 변환 텍스트</span>
                        <span class="required-mark">*</span>
                    </label>
                    <div class="input-wrapper">
                        <div class="input-icon-container textarea-icon">
                            <RadzenIcon Icon="text_fields" class="input-icon" />
                        </div>
                        <RadzenTextArea Rows="6"
                                        class="custom-textarea"
                                        Placeholder="음성으로 변환할 텍스트를 입력하세요..."
                                        @bind-Value="@(model.Content)"
                                        Name="Content" />
                        <RadzenRequiredValidator Component="Content"
                                                 Text="내용은 필수 입력 항목입니다"
                                                 class="custom-validator" />
                    </div>
                    <div class="field-footer">
                        <span class="field-hint">명확한 발음을 위해 문장 부호를 적절히 사용하세요</span>
                        <span class="character-count">
                            <RadzenIcon Icon="text_format" class="count-icon" />
                            @(model.Content?.Length ?? 0) / 1000
                        </span>
                    </div>
                </div>
            </div>

            <!-- 변경 사항 미리보기 -->
            <div class="changes-section">
                <div class="changes-card">
                    <div class="changes-header">
                        <RadzenIcon Icon="track_changes" class="changes-icon" />
                        <span class="changes-title">변경 사항 미리보기</span>
                    </div>
                    <div class="changes-content">
                        <div class="change-item">
                            <span class="change-label">제목:</span>
                            <span class="change-value">@(model.Name ?? "입력 대기 중...")</span>
                        </div>
                        <div class="change-item">
                            <span class="change-label">내용:</span>
                            <span class="change-value">
                                @if (!string.IsNullOrWhiteSpace(model.Content))
                                {
                                    @(model.Content.Length > 100 ? model.Content.Substring(0, 100) + "..." : model.Content)
                                }
                                else
                                {
                                    <span class="change-placeholder">입력 대기 중...</span>
                                }
                            </span>
                        </div>
                        <div class="change-stats">
                            <span class="stat-item">
                                <RadzenIcon Icon="schedule" class="stat-icon" />
                                마지막 수정: @(originalTts?.UpdatedAt.ToString("yyyy-MM-dd HH:mm") ?? "-")
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 정보 카드 -->
            <div class="info-section">
                <div class="info-card edit-info">
                    <RadzenIcon Icon="edit_note" class="info-icon" />
                    <div class="info-content">
                        <h4 class="info-title">수정 시 주의사항</h4>
                        <ul class="info-list">
                            <li>수정된 내용은 즉시 적용됩니다</li>
                            <li>현재 방송 중인 TTS는 다음 재생부터 변경사항이 적용됩니다</li>
                            <li>최대 1000자까지 입력 가능합니다</li>
                            <li>채널에 할당된 TTS의 경우 모든 채널에 동일하게 적용됩니다</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- 액션 버튼 섹션 -->
        <div class="dialog-actions">
            <div class="action-info">
                <RadzenIcon Icon="save_alt" class="action-info-icon" />
                <span class="action-info-text">변경사항을 저장하시겠습니까?</span>
            </div>
            <div class="action-buttons">
                <RadzenButton ButtonStyle="ButtonStyle.Light"
                              Text="취소"
                              Icon="close"
                              Click="@CancelClick"
                              Variant="Variant.Flat"
                              class="btn-cancel"
                              Disabled="@isProcessing" />
                @if (isProcessing)
                {
                    <RadzenButton ButtonType="ButtonType.Submit"
                                  Text="저장 중..."
                                  Icon="sync"
                                  IconSpin="true"
                                  Disabled="true"
                                  Variant="Variant.Flat"
                                  class="btn-primary processing" />
                }
                else
                {
                    <RadzenButton ButtonType="ButtonType.Submit"
                                  Icon="save"
                                  Text="변경사항 저장"
                                  Variant="Variant.Flat"
                                  class="btn-primary btn-save" />
                }
            </div>
        </div>
    </RadzenTemplateForm>
</div>

